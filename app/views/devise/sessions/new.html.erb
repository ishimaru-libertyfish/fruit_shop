<h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path do |f| %>
  <div class="field">
   <%= f.label :メールアドレス %><br>
    <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br>
    <p><%= f.password_field :password, autocomplete: "current-password" %></p>
  </div>

  <br>

  <div class="actions">
     <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
